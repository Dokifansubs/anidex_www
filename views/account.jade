extends layout
block content
    .container
        if error
            .alert.alert-danger.alert-dismissible(role='alert')
                button.close(data-dismiss='alert', type='button')
                    span(aria-hidden='true') &times;
                    span.sr-only Close
                strong Error!&nbsp;
                | #{error}
        if message
            .alert.alert-success.alert-dismissible(role='alert')
                button.close(data-dismiss='alert', type='button')
                    span(aria-hidden='true') &times;
                    span.sr-only Close
                strong Success!&nbsp;
                | #{message}
    .container-admin
        .nav-admin
            ul.nav.nav-pills.nav-stacked
                li.active
                    a(href='#') Settings
                li
                    a(href='#') Messages
                li
                    a(href='#') Torrents
                li
                    a(href='#') Comments
                li
                    a(href='#') Groups
        .admin-content
            .col-xs-12.col-lg-8
                .col-xs-12
                    // Placeholder, would like to put user's gravatar here. Together with perhaps other publicly visible info.
                    img.media-object(alt='64x64' data-src='holder.js/64x64' style='width: 64px; height: 64px;' src='data:image/svg+xml;base64,')
                .col-xs-2
                    strong Username:
                .col-xs-10                    
                    p #{user.username}                    
                .col-xs-2
                    strong Change password:
                .col-xs-10
                    form(action='/update-password' method='post')
                        .form-group
                            input.form-control(type='password' name='opass' placeholder='Current password')
                            input.form-control(type='password' name='npass' placeholder='New password')
                            input.form-control(type='password' name='cpass' placeholder='Confirm new password')
                            .btn-group.pull-right
                                button.btn.btn-default(type='button') Clear
                                button.btn.btn-primary(type='submit') Change
                    </br>
                    </br>
                .col-xs-2
                    strong Change email:
                .col-xs-10
                    form
                        .input-group.form-group
                            if user
                                input.form-control(type='text' name='email' value=user.email)
                            else
                                input.form-control(type='text' name='email')
                            .input-group-btn
                                .btn-group
                                    button.btn.btn-default(type='submit') Change
                .col-xs-2
                    strong TT API key:
                .col-xs-10
                    form
                        .input-group.form-group
                            input.form-control(type='text' name='ttapikey')
                            .input-group-btn
                                .btn-group
                                    button.btn.btn-default(type='submit') Change
                .col-xs-12
                    hr
                .col-xs-2
                    strong Default Language:
                .col-xs-10
                    // TODO: Auto-fill with available languages from database.
                    select.form-control.upload-select
                        option All languages
                        option English
                        option Non-English
                        option Raws
                .col-xs-2
                    strong Default Category:
                .col-xs-10
                    // TODO: Auto-fill with available categories from database.
                    select.form-control.upload-select
                        option Anime
                        option Manga
                        option Music
                        option Literature
                        option Live Action
                        option Software
                        option Other
                .col-xs-2
                    strong Default Rating:
                .col-xs-10
                    // Upload torrents as R18+ by default or not
                    input(type='checkbox')
                    label 18+
                .col-xs-2
                    strong Default TTAPI:
                .col-xs-10
                    input(type='checkbox')
