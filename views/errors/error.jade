if message
    if message.error
        .alert.alert-danger.alert-dismissible(role='alert')
            button.close(data-dismiss='alert', type='button')
                span(aria-hidden='true') &times;
                span.sr-only Close
            strong Error!&nbsp;
            | #{message.error}
    if message.info
        .alert.alert-success.alert-dismissible(role='alert')
            button.close(data-dismiss='alert', type='button')
                span(aria-hidden='true') &times;
                span.sr-only Close
            strong Success!&nbsp;
            | #{message.info}