extends layout
block content
    .container.container-width
        .box
            table.Table.table-hov
                tr.Header
                    th Fansub Group
                    th Tag
                    th Language
                    th Website
                    th IRC
                    th Founded
                    th RSS
                    each group, i in data
                        - var rowclass = (i % 2 == 0) ? 'odd' : 'even'
                        tr.Row
                            td(class=rowclass)
                                a(href='/groups/#{group.group_id}') #{group.name}
                            td(class=rowclass) #{group.short_name}
                            td(class=rowclass) #{group.language}
                            td(class=rowclass)
                                a(target='_blank', href='#{group.website}') #{group.website}
                            td(class=rowclass)
                                a(href='irc://#{group.irc_server}/#{group.irc_channel}') ##{group.irc_channel}@#{group.irc_server}

                            td(class=rowclass) #{group.founded_timestamp}
                            td(class=rowclass) RSS
