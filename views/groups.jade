extends layout
block content
    .container
        .box
            table.Table.table-hov
                tr.Header
                    th Fansub Group
                    th Tag
                    th Language
                    th Website
                    th IRC
                    th Founded
                    th RSS
                    each group, i in groups
                    - var rowclass = (i % 2 == 0) ? 'odd' : 'even'
                        tr.Row
                            td #{group.name}
