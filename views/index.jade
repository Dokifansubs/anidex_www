extends layout
block content
    .container
        .box
            .header
                h5 News
            .panel-body #{news}
        .box
            .header
                h5 Releases
            table.tor
                tbody
                    tr
                        th.tor
                        th.tor Name
                        th.tor
                        th.tor.tor-d Download
                    each torrent, i in torrents
                        tr(class=(i % 2 == 0) ? 'odd' : 'even')
                            td.tor.tor-cat(rowspan="2") #{torrent.cat}
                            td.tor.tor-name #{torrent.name}
                            td.tor.tor-c #{torrent.seeders} / #{torrent.leechers}
                            td.tor.tor-d(rowspan="2")
                                a(href='http://anidex.moe/') Torrent
                                span &nbsp;/&nbsp;
                                a(href='http://anidex.moe/') Magnet
                        tr(class=(i % 2 == 0) ? 'odd' : 'even')
                            td.tor.tor-group Group:&nbsp;
                                a(href='http://doki.co') #{torrent.group}
                            td.tor.tor-c #{torrent.completed}

