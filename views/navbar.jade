.navbar(class=['navbar-default', 'navbar-fixed-top'])
    .container
        .navbar-header
            button.navbar-toggle.collapsed(data-target=".bs-navbar-collapse" data-toggle="collapse" type="button")
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') #{title}
        nav.navbar-collapse.bs-navbar-collapse.collapse(role="navigation")
            ul.nav.navbar-nav
                li#groups
                    a(href='/groups') Groups
                li#faq
                    a(href='/faq') FAQ
                li#irc
                    a(href='irc://irc.rizon.net/anidex') IRC
                li#rss
                    a(href='/rss') RSS
            ul.navbar-right(class=['nav', 'navbar-nav'])
                li#signup
                    a(href='/register') Register
                li#login
                    a.login(data-toggle="modal" data-target="#loginModal") Login
            form.navbar-right.navbar-form(role='search')
                .input-group
                    input.form-control(placeholder='Search', name='srch-term', id='srch-term', type='text')
                    .input-group-btn
                        button.btn.btn-default(type='submit')
                            i.glyphicon.glyphicon-search

include modals/login