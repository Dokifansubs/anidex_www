extends ../layout
block content
    .login-box
        if error
            .alert.alert-danger.alert-dismissible(role='alert')
                button.close(data-dismiss='alert', type='button')
                    span(aria-hidden='true') &times;
                    span.sr-only Close
                strong Error!&nbsp;
                | #{error}
        form(action='/login' method='post')
            input.form-input(type='text' name='username' placeholder='Username')
            input.form-input(type='password' name='password' placeholder='Password')
            .checkbox
                input#rmbm(type='checkbox' name='rememberme')
                label(for='rmbm') Remember me
            button.anibtn.anibtn-default(type='submit') Login